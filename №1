#include <stdio.h>
#include <math.h> //підключення бібліотеки для математичних функцій

int main() {
     //оголошення змінних
    int s;
    double a, f; 
    printf("Введіть значення s: ");
    scanf("%d", &s);
  
    printf("Введіть значення a: ");
    scanf("%lf", &a);
    if (s < 0) {
        f = 2 * s + a;
    } else if (s == 0) {
        if (s + a - 5 >=0) {
            f = sqrt(s + a - 5);
        } else {
            printf("Неможливо виконати обчислення бо вираз під коренем відємний\n");
       
            return 0;
        } 
    } else if (s > 0) {
        if (2 * a - 4 != 0) {
            f = 2 * s / (2.0 * a - 4);
        } else {
            printf("Неможливо виконати обчислення бо вираз під коренем дорівнює нулю\n");
      
            return 0;
        } 
    } else {
        printf("Неможливо визначити обчислення для s = %d\n" , s);

        return 0;
    }
    printf("Результат обчислення: f = %.2lf\n", f);

    return 0;
    
}
