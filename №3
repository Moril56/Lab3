#include <stdio.h>

int main() {
short series_namber;

//зчитуємо номер серії 
printf("Введіть номер серії: "); 
scanf("%hd", &series_namber);

  //визначаємо назву та дату показу серій 
  switch (series_namber) {
    case 1:
    printf("Серія 1: Вогняний шип\n Дата прем'єрного показу: 10 вересня 2024 року\n");
    break;
    case 2:
    printf("Серія 2: Птах і дзеркало\n Дата прем'єрного показу: 12 вересня 2024 рок\n");
    break;
    case 3: 
    printf("Серія 3: Храмовий вогонь\n Дата прем'єрного показу: 14 вересня 2024 року\n");
    break; 
    case 4: 
    printf("Серія 4: Вода люто кипить\n Дата прем'єрного показу: 17 вересня 2024 року\n");
    break; 
    case 5:
    printf("Серія 5: Армія ацтеків\n Дата прем'єрного показу: 19 вересня 2024 року\n");
    break;
    case 6:
    printf("Серія 6: Гнобитель\n Дата прем'єрного показу: 22 вересня 2024 року\n");
    break;
    case 7:
    printf("Серія 7: Цомпантлі\n Дата прем'єрного показу: 24 вересня 2024 року\n");
    break;
    case 8:
    printf("Серія 8: Блискавка без грому\n Дата прем'єрного показу: 26 вересня 2024 року\n");
    break;
    case 9: 
    printf("Серія 9: Кодекс\n Дата прем'єрного показу: 28 вересня 2024 року\n");
    break;
    case 10:
    printf("Серія 10: Плач матері\n Дата прем'єрного показу: 30 вересня 2024 року\n");
    break;
    default: 
    printf("Невірний номер серії\n");
    }
    return 0;
      
    }
